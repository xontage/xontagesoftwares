
@model PRIT.Entity.tbl_EmploymentDetails

@{
    Layout = null;

    var a = ViewBag.EmpID;
}
<script src="~/Scripts/bootstrap-datepicker.min.js"></script>
<link href="~/Content/css/bootstrap-datepicker.min.css" rel="stylesheet" />

